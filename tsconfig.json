{
  "compilerOptions": {
    "target": "es2020",                        /* Modern target for ESM projects */
    "module": "NodeNext",                      /* Use NodeNext for ESM support */
    "moduleResolution": "nodenext",            /* NodeNext module resolution for ESM */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "resolveJsonModule": true                  /* Allow importing JSON files */
  },
  "include": [
    "./server.ts",
    "./app.ts",
    "./**/*.ts"
  ]
}